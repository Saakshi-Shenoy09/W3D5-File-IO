@model List<string>
@{
    ViewData["Title"] = "Message Form";
}

<h2>Submit Your Message</h2>

<form method="post">
    <div>
        <label>Email ID:</label><br />
        <input type="email" name="emailId" required style="width:300px;" />
    </div>
    <br />
    <div>
        <label>Message:</label><br />
        <input type="text" name="message" required style="width:300px;" />
    </div>
    <br />
    <button type="submit">Submit</button>
</form>

<hr />

<h3>Saved Messages</h3>
@if (Model.Count > 0)
{
    <p>Data stored in the txt file.</p>
}
else
{
    <p>No data submitted yet.</p>
}
